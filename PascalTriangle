package assignments;


import java.util.Scanner;

public class pascalTriangle {
	
public static void main(String args[]) {
	
int rows, i, k, n=1, j;
Scanner scan = new Scanner(System.in);

System.out.print("Enter Number of Rows : ");
rows = scan.nextInt();

for(i=0;i<rows;i++)
{
	
	for(k=rows; k>i; k--)
	{
		System.out.print(" ");
	}
    n = 1;
	for(j=0;j<=i;j++)
	{
		 System.out.print(n+ " ");
         n = n * (i - j) / (j + 1);
	}
	System.out.println();
}

				}
		}
		
